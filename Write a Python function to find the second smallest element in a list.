#Q. Write a Python function to find the second smallest element in a list.


def second_smallest(lst):
    sorted_lst = sorted(lst)
    return sorted_lst[1]

numbers = []

for i in range(5):
    num = int(input(f"Enter the numbers for lst{i+1}: "))
    numbers.append(num)

print("List: ",numbers)
print("Second smallest numbers: ",second_smallest(numbers))
